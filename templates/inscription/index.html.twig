{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Pre inscription{% endblock %}

{% block body %}
    <h5 class="text-center presinscriptionTitle">Veuillez completer le formulaire</h5>
    {% if typeInscription  == 'prestataire' %}
        {{ form_start(form)}}
            <div class="preinscription">
                <div class="nom">
                    {{ form_row(form.nom) }}
                </div>
                <div class="email ">
                    {{ form_row(form.email) }}
                </div>
                <div class="form-row  submit " >
                    {{ form_row(form.submit) }}
                </div>
            </div>

        {{ form_end(form) }}
    {% endif %}

    {% if typeInscription  == 'internaute' %}
        {{ form_start(form)}}
            <div class="preinscription">
                <div class="nom">
                    {{ form_row(form.nom) }}
                </div>
                <div class="prenom">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="email ">
                    {{ form_row(form.email) }}
                </div>

                <div class="form-row  submit " >
                    {{ form_row(form.submit) }}
                </div>
            </div>
        {{ form_end(form) }}
    {% endif %}

{% endblock %}

